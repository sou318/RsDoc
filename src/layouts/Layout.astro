---
import Header from "./Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8">
		<meta name="description" content="Redstone circuits document">
		<meta name="generator" content={Astro.generator}>
		<link rel="icon" type="image/png" href="/favicon.png">
		<title>{title} - RsDoc</title>
	</head>
	<body>
		<Header/>
		<slot/>
	</body>
</html>

<style>
	body {
		margin: 0;
	}
</style>
